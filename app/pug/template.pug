block vars
  -
    var siteTitle = typeof title !== 'undefined' ? title : 'Заголокок сайта'
    var pageTitle = typeof title !== 'undefined' ? title : 'Заголовок страницы'
  -
    var html = {
      attrs: {
        lang: 'ru'
      },
      classList: []
    }
  -
    var body = {
      attrs: {},
      classList: []
    }
  -
    var layout = {
      attrs: {},
      classList: []
    }

doctype html
html(class=html.classList)&attributes(html.attrs)
  head
    block head-start
    block meta
      meta(charset='UTF-8')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title #{siteTitle} - #{pageTitle}

    block styles
      link(rel='stylesheet', href='assets/css/base.css')
      link(rel='stylesheet', href='assets/css/layout.css')
    block head-end

  body(class=body.classList)&attributes(body.attrs)
    block body-start

    include layout

    block modal

    block scripts
      script(type='text/javascript', src='assets/js/layout.js')
    block end-body
